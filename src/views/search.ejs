  <!-- Search Section -->
  <div class="container my-5">
    <h1 class="text-center mb-4">🔍 Search Video YouTube</h1>

    <div class="row justify-content-center">
      <div class="col-md-8">
        <form action="/search" method="GET" class="input-group">
          <input 
            type="text" 
            name="q" 
            class="form-control form-control-lg" 
            placeholder="Masukkan kata kunci video..."
            required>
          <button type="submit" class="btn btn-primary btn-lg">Cari</button>
        </form>
      </div>
    </div>

    <!-- Tempat hasil pencarian -->
    <div class="row mt-5">
      <div class="col text-center text-muted">
        <p>Hasil pencarian akan muncul di sini...</p>
      </div>
    </div>
  </div>